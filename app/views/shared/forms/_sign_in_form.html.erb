

<div class="container complete-form">
  <h2>Sign In</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email,
                label: false,
                placeholder: 'Email',
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                label: false,
                placeholder: 'Password',
                input_html: { autocomplete: "current-password" }%>
    <%= f.button :submit, "SIGN IN", class: "btn btn-action btn-medium-green" %>
  <% end %>
</div>
