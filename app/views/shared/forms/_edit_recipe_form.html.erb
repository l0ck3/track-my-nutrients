<%= simple_form_for recipe do |f| %>
  <%= f.input :prep_time, label: false, placeholder: "Preparation Time" %>
  <%= f.input :difficulty, label: false, placeholder: "Difficulty" %>
  <%= f.input :description, as: :text, input_html: { rows: 5}, label: false, placeholder: "Description" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'SUBMIT', class: "btn btn-action btn-medium-green" %>
<% end %>
