<div class="container complete-form" id="filter-bar">
  <div class="inline-row">
    <div class="filters ">

          <%= form_tag recipes_path, method: :get do %>
            <div class="search-container">
              <%= text_field_tag :query,
                params[:query],
                class: "form-control margin-search-box",
                placeholder: "Find A Recipe" %>
                <%= submit_tag "OK", class: "btn btn-action btn-ingredient"%>
              </div>
          <% end %>


        <%= form_tag recipes_path, method: :get do %>
          <div class="search-container">
            <%= collection_select(:category, :id, Category.joins(:recipes).order(:name).distinct, :id, :name,
              {:prompt => "All Meal Types"},
              {:class => "form-control margin-search-box hidden-xs"})%>
                <%= submit_tag "OK", class: "btn btn-action btn-ingredient hidden-xs"%>
          </div>
        <% end %>

          <%= form_tag recipes_path, method: :get do %>
              <%= collection_select(:fooditem, :id, FoodItem.joins(:recipes).order(:name).distinct, :id, :name,
                {:prompt => "All Ingredients"},
                {:class => "form-control hidden-xs "},
                )%>
                <%= submit_tag "OK", class: "btn btn-action btn-small btn-ingredient hidden-xs"%>
          <% end %>
    </div>
  </div>
</div>

<div class="container complete-form" id="filter-bar">

  <div class="inline-row size-bar">
        <%= link_to recipes_path(current_user.profile.id) do %>
          <div class="btn btn-action btn-large btn-medium-green"">
            All Recipes
          </div>
        <% end %>

        <%= link_to new_recipe_path do %>
          <div class="btn btn-action btn-large btn-medium-green">
            Create a Recipe
          </div>
        <% end %>

  </div>

</div>

