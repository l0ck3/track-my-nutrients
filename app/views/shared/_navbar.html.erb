
<div class="navbar-tmn">
  <!-- Logo -->
  <%= link_to profile_dashboard_path(Profile.where(user: current_user).first) do %>
    <%= image_tag "logo-without-text.png" %>
  <% end %>

  <!-- Right Navigation when user logged in-->
  <div class="navbar-tmn-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to profile_dashboard_path(Profile.where(user: current_user).first), class: "navbar-tmn-item navbar-tmn-link" do %>
        <i class="far fa-chart-bar"></i> Dashboard
      <% end %>
      <%= link_to recipes_path, class: "navbar-tmn-item navbar-tmn-link" do %>
        <i class="fas fa-book-open"></i> Recipes
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-tmn-item">
        <div class="dropdown">
          <div class="navbar-tmn-link dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"><i class="far fa-user"></i><span> Account</span></div>
          <ul class="dropdown-menu dropdown-menu-right navbar-tmn-dropdown-menu">
            <li>
              <%= link_to edit_profile_path(Profile.where(user: current_user).first) do %>
                <i class="fa fa-cog"></i><span> Settings</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-tmn-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-tmn-dropdown-menu">
        <li><a href="#">Settings</a></li>

      </ul>
    </div>
  </div>
</div>

