<div class="medium-green-wrapper recipe-wrapper">
  <div class="container recipe-container">

      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
          <div class="recipe-add-meal">
            <%= simple_form_for :added_recipe, url: added_recipes_path, method: :post do |f| %>
              <%= f.hidden_field :recipe_id, value: @recipe.id %>
              <%= f.button :submit, "ADD MEAL TO FOOD DIARY", class: "btn btn-action btn-large btn-medium-green" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="recipe-attributes">
            <div class="recipe-attribute">
              <i class="far fa-clock"></i><span> <%= @recipe.prep_time %></span>
            </div>
            <div class="recipe-attribute">
              <i <i class="far fa-user"></i><span> <%= @recipe.portion %></span>
            </div>
            <div class="recipe-attribute">
              <i class="fas fa-signal"></i><span> <%= @recipe.difficulty.capitalize %></span>
            </div>
            <div class="recipe-attribute">
              <i class="fas fa-utensils"></i>
              <span>
                <%= @recipe.categories[0].name.capitalize %>
                <% if @recipe.categories.length > 1 %>
                  | <%= @recipe.categories[1].name.capitalize %>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-xs-12 col-md-5">
        <div class="recipe-ingredients recipe-in">
          <h4>
            Ingredients
            <div class="recipe-small-green-line"></div>
          </h4>
          <ul>
            <% @recipe.ingredients.each do |ingredient| %>
              <li><%= ingredient.quantity %><%= ingredient.food_item.unit unless ingredient.food_item.unit == "no_unit" %> <%= ingredient.food_item.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-xs-12 col-md-7">
        <div class="recipe-instructions recipe-in">
          <h4>
            Instructions
            <div class="recipe-small-green-line"></div>
          </h4>
          <p>
            <% if @recipe.description == "No instructions available" %>
              <%= @recipe.description %>
            <% else %>
              <ol>
                <% array_instructions = @recipe.description.split(".") %>
                <% array_instructions.each do |sentence| %>
                  <li><%= sentence + "." %></li>
                <% end %>
              </ol>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
