<div class="container recipe-header-md-lg hidden-xs hidden-sm">
  <div class="recipe-gray-line"></div>
  <div class ="recipe-header-content">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="recipe-header-text">
          <h3>
            <%= @recipe.name %>
            <div class="recipe-green-line"></div>
          </h3>
          <%= render "shared/recipe_tracker", hash_nutrient: ApplicationHelper::HASH_NUTRIENT,unit_conv: ApplicationHelper::UNIT_CONV, nutrients_unit: ApplicationHelper::NUTRIENTS_UNIT, diet_array: ApplicationHelper::DIET_ARRAY%>
        </div>
      </div>
      <div class="col-xs-12 col-md-4 pull-right">
        <div class="recipe-header-photo">
          <%= cl_image_tag(@recipe.photo) %>
        </div>
      </div>
    </div>
  </div>
</div>

